<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="100px"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rcbDados"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:text="@string/txtReceber" />

    <ToggleButton
        android:id="@+id/togReceber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/btnToggleN"
        android:textOn="@string/btnToggleS" />

    <CheckBox
        android:id="@+id/chkTodos"
        android:layout_width="203dp"
        android:layout_height="40dp"
        android:text="@string/txtTodosAssuntos" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="89dp"
        android:layout_height="20dp"
        android:text="@string/txtNome" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnSalvar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>